{
  "name": "faculty-reporting-system",
  "private": true,
  "version": "1.0.0",
  "scripts": {
  "dev:client": "npm --prefix client run dev",
  "build:client": "npm --prefix client install --include=dev && npm --prefix client run build",
    "preview:client": "npm --prefix client run preview",
    "dev:server": "nodemon server.js",
    "start:server": "node server.js",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build": "npm run build:client",
    "db:apply": "node scripts/apply_pg_schema.js",
    "db:seed": "node scripts/seed_pg_demo_data.js",
    "db:setup": "npm run db:apply && npm run db:seed",
    "db:index": "node scripts/create_pg_indexes.js",
    "admin:create": "node scripts/create_admin_user.js",
    "start:local": "scripts\\start_dev_local.cmd"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.12.0",
    "swagger-ui-express": "^5.0.1",
    "xlsx": "^0.18.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.7"
  }
}
